<div class="container">
    <h2> Current Posts </h2>
</div>

{{#each posts as |post|}}
<div class="container">
  <div class="card">
    <div class="card-header">
      {{post.title}}
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-9">
                <h5 class="card-title">{{post.title}} </h5>
            </div>
            <div class="col-3">
                <p>{{post.user.username}}</p>
            </div>
        </div>
      <p class="card-text">{{post.content}}</p>
    </div>
  </div>
</div>
{{/each}}


{{#if logged_in}}
<div class="container">
<form>
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="" class="form-control" id="title" aria-describedby="emailHelp">
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <input type="" class="form-control" id="content">
  </div>
  <button type="submit" class="btn btn-primary new-post-btn">Post</button>
</form>
{{/if}}
<script src="./js/add-post.js"></script>